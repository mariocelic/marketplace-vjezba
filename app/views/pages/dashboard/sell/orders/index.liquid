---
metadata:
  breadcrumbs:
    - label: app.dashboard
      url: /dashboard
    - label: app.seller
    - label: app.orders.list
---

{% liquid
  function current_profile = 'lib/current_profile', user_id: context.current_user.id
  include 'lib/profile_present_or_redirect', profile: current_profile

  function orders = 'lib/queries/orders/search', limit: 100, seller: current_profile.id

  render 'theme/simple/ui/breadcrumbs', breadcrumbs: context.page.metadata.breadcrumbs, value: orders.total_entries
  include 'theme/simple/dashboard/orders/index', orders: orders, role: 'seller'
%}