{% liquid
  function current_profile = 'lib/current_profile', user_id: context.current_user.id
  include 'lib/profile_present_or_redirect', profile: current_profile

  function item = 'lib/queries/items/find', id: context.params.item_id

  function object = 'lib/commands/orders/create/build', item: item, current_user_id: context.current_user.id
  function object = 'lib/commands/orders/create/check', object: object

  include 'theme/simple/orders/new', item: item, order: object
%}
