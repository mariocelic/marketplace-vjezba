{% if current_profile %}
  {% liquid
    assign group_id = group.id | append: ''
    assign ids = current_profile.joined_group_ids | map: 'id'
    if ids contains group_id
      assign joined = true
    else
      assign joined = false
    endif
  %}

  <button href="#" class="{% if joined %} joined{% endif %}"
    title="join/leave"
    data-join-group="{% print group.id %}">

    <span class="button join pointer-events-none">
      {{ 'app.groups.join' | t }}
    </span>

    <span class="button button-secondary leave pointer-events-none">
      {{ 'app.groups.leave' | t }}
    </span>
  </button>
{% endif %}
