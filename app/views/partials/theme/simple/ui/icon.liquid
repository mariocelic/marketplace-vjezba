{% comment %}

  List of icons in SVG format

  Params:
    - icon name (string)
    - class (string, optional)

{% endcomment %}


{% capture attrs %}
  viewBox="0 0 24 24"
  fill="none"
  class="{{ class | default: 'w-4 h-4' }}"
  focusable="false"
  role="img"
  xmlns="http://www.w3.org/2000/svg"
{% endcapture %}


{% case icon %}

  {% when 'plus' or 'all' %}
  <svg data-icon="plus" {{ attrs | html_safe }}><defs><style>.a{fill:none;stroke:currentColor;stroke-linecap:round;stroke-linejoin:round;stroke-width:1.5px}</style></defs><path class="a" d="M.75 12h22.5M12 .75v22.5"/></svg>

  {% when 'trash' or 'all' %}
  <svg data-icon="trash" {{ attrs | html_safe }}><defs><style>.a{fill:none;stroke:currentColor;stroke-linecap:round;stroke-linejoin:round;stroke-width:1.5px}</style></defs><path class="a" d="M1.5 4.5h21M14.25 1.5h-4.5A1.5 1.5 0 008.25 3v1.5h7.5V3a1.5 1.5 0 00-1.5-1.5zM9.75 17.25v-7.5M14.25 17.25v-7.5M18.865 21.124A1.5 1.5 0 0117.37 22.5H6.631a1.5 1.5 0 01-1.495-1.376L3.75 4.5h16.5z"/></svg>

  {% when 'pencil' or 'all' %}
  <svg data-icon="pencil" {{ attrs | html_safe }}><defs><style>.a{fill:none;stroke:currentColor;stroke-linecap:round;stroke-linejoin:round;stroke-width:1.5px}</style></defs><path class="a" d="M22.19 1.81a3.639 3.639 0 00-5.17.035l-14.5 14.5L.75 23.25l6.905-1.771 14.5-14.5a3.637 3.637 0 00.035-5.169zM16.606 2.26l5.134 5.134M2.521 16.344l5.139 5.13"/></svg>

  {% when 'dashUp' or 'all' %}
  <svg data-icon="dashUp" {{ attrs | html_safe }}><path d="M.75 17.189L11.47 6.47a.749.749 0 011.06 0l10.72 10.719" fill="none" stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2.5"/></svg>

  {% when 'dashDown' or 'all' %}
  <svg data-icon="dashDown" {{ attrs | html_safe }}><path d="M23.25 7.311L12.53 18.03a.749.749 0 01-1.06 0L.75 7.311" fill="none" stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2.5"/></svg>


  {% else %}

  <script>
    window.addEventListener('load', function() { throw new Error("Missing icon: {{ icon | raw_escape_string }}"); })
  </script>

{% endcase %}