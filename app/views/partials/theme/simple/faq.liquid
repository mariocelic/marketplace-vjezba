<section class="text-gray-700">
  <div class="container px-5 py-24 mx-auto">
    <div class="text-center mb-20">
      <h1 class="text-4xl text-center mb-4 font-heading">{{'app.faq.title' | t}}</h1>
      <p class="text-base leading-relaxed xl:w-3/4 lg:w-3/4 mx-auto">
        {{'app.faq.subtitle' | t}}
      </p>
    </div>
    <div class="flex flex-wrap lg:w-4/5 sm:mx-auto sm:mb-2 -mx-2">
      <div class="w-full lg:w-1/2 px-4 py-2">
        {% assign questions = 'app.faq.questions.section1' | t %}
        {% for item in questions %}
          {% assign value = item[1] %}
          <details class="mb-4">
            <summary class="cursor-pointer font-semibold bg-panel rounded-md py-2 px-4">
              {{ value.question }}
            </summary>

            <span>
              {{ value.answer }}
            </span>
          </details>
        {% endfor %}
      </div>
      <div class="w-full lg:w-1/2 px-4 py-2">
        {% assign questions = 'app.faq.questions.section2' | t %}
        {% for item in questions %}
          {% assign value = item[1] %}
          <details class="mb-4">
            <summary class="cursor-pointer font-semibold bg-panel rounded-md py-2 px-4">
              {{ value.question }}
            </summary>

            <span>
              {{ value.answer }}
            </span>
          </details>
        {% endfor %}
      </div>
    </div>
  </div>
</section>
